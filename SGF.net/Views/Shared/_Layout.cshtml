<!DOCTYPE html>
<html>
    <head>
         <meta charset="utf-8" />
         <meta name="viewport" content="width=device-width, initial-scale=1">
         <title>@ViewBag.Title</title>
         @Styles.Render("~/Content/bootstrapcss")
    </head>
<body>
  
    
<div class="container">
 <div class="row clearfix  hidden-xs visible-sm visible-md visible-lg"><br></div>

 <div class="row show-grid">
  <div class="col-md-2">Logo</div>  
  <div class="col-md-10">
      <header>
          header
      </header>
  </div>
</div>

<div class="row show-grid">
  <div class="col-md-6">BreadCrumbs</div>  
  <div class="col-md-6">
     <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">SGF.net</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#">Principal</a></li>
            <li><a href="#">Acerca de</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contáctenos<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
                <li class="divider"></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
          
          
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</div>

<div class="row show-grid">
  <div class="col-md-4">
     <div class="btn-group-vertical">
         <div class="btn-group">          
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Mantenimiento <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Departamentos</a></li>
                  <li><a href="#">Asociados</a></li>
                  <li><a href="#">Familiares Directos</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Reportes</a></li>
              </ul>
           </div>
       
          <div class="btn-group">   
               <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Créditos <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Líneas de crédito</a></li>
                  <li class="divider"></li>
                  <li><a href="#">Solicitud</a></li>
                  <li><a href="#">Aprobación</a></li>             
                  <li><a href="#">Impresión</a></li>
              </ul>      
        </div>
      </div>
 </div>  
  
    <div class="col-md-8">Content
     @RenderBody()
  </div>
</div>
    </div>  

</div>


 @Scripts.Render("~/bundles/jquery")
 @Scripts.Render("~/bundles/bootstrapjs")
</body>
</html>
